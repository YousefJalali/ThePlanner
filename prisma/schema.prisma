// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Status {
  PROPOSED
  INPROGRESS
  COMPLETED
}

type Image {
  id     String
  name   String
  height Float
  width  Float
  path   String
}

model Project {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  description        String
  color              String
  tasks              Task[]
  proposed           Int
  inprogress         Int
  completed          Int
  progressPercentage Float
  isHidden           Boolean @default(false)
}

model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   String    @db.ObjectId
  openTask    Boolean
  startDate   DateTime
  endDate     DateTime?
  startTime   DateTime?
  endTime     DateTime?
  attachments Image[]
  status      Status    @default(PROPOSED)
}
